    <Button
        android:id="@+id/button_yes"
        android:layout_width="88dp"
        android:layout_height="52dp"
        android:layout_marginBottom="108dp"
        android:text="@string/yes_button"
        app:layout_constraintBottom_toTopOf="@+id/button_left"
        app:layout_constraintStart_toStartOf="@+id/button_left" />

    <Button
        android:id="@+id/button_no"
        android:layout_width="86dp"
        android:layout_height="51dp"
        android:layout_marginBottom="104dp"
        android:text="@string/no_button"
        app:layout_constraintBottom_toTopOf="@+id/button_right"
        app:layout_constraintStart_toStartOf="@+id/button_right" />

    <Button
        android:id="@+id/button_alpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alpha_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_yes" />

    <Button
        android:id="@+id/button_beta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/beta_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_alpha" />

    <Button
        android:id="@+id/button_charry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/charry_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_beta" />

    <Button
        android:id="@+id/button_delta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/delta_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_charry" />

    <Button
        android:id="@+id/button_echo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/echo_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_delta" />

