<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_front"
        android:layout_width="106dp"
        android:layout_height="46dp"
        android:layout_marginBottom="56dp"
        android:text="@string/front_button"
        app:layout_constraintBottom_toTopOf="@+id/button_back"
        app:layout_constraintEnd_toEndOf="@+id/button_back"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_back" />

    <Button
        android:id="@+id/button_up"
        android:layout_width="110dp"
        android:layout_height="51dp"
        android:layout_marginBottom="20dp"
        android:text="@string/up_button"
        app:layout_constraintBottom_toTopOf="@+id/button_front"
        app:layout_constraintEnd_toEndOf="@+id/button_front"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_front" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="111dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:text="@string/back_button"
        app:layout_constraintBottom_toTopOf="@+id/button_down"
        app:layout_constraintEnd_toEndOf="@+id/button_down"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_down" />

    <Button
        android:id="@+id/button_left"
        android:layout_width="91dp"
        android:layout_height="46dp"
        android:layout_marginBottom="4dp"
        android:text="@string/left_button"
        app:layout_constraintBottom_toTopOf="@+id/button_back"
        app:layout_constraintEnd_toStartOf="@+id/button_back" />

    <Button
        android:id="@+id/button_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="4dp"
        android:text="@string/right_button"
        app:layout_constraintBottom_toTopOf="@+id/button_back"
        app:layout_constraintStart_toEndOf="@+id/button_back" />

    <Button
        android:id="@+id/button_down"
        android:layout_width="109dp"
        android:layout_height="48dp"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="16dp"
        android:text="@string/down_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/how_to_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/how_to" />
    </ScrollView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:layout_marginStart="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2">

        <TextView
            android:id="@+id/license_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/voice_license" />
    </ScrollView>

